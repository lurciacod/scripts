  <button class="tablinks" onclick="openTab('dataGathering')">Recolección de Datos</button>
  <button class="tablinks" onclick="openTab('dataProcessing')">Procesamiento de Datos</button>
  <button class="tablinks" onclick="openTab('dataStorage')">Almacenamiento de Datos</button>
  <button class="tablinks" onclick="openTab('dataAnalysis')">Análisis de Datos</button>
  <button class="tablinks" onclick="openTab('dataVisualization')">Visualización de Datos</button>
</div>

